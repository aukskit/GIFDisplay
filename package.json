{
  "name": "electron",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.electron-gif-app",
    "productName": "GIFDisplay",
    "files": [
      "src/*",
      "resources/icon/*",
      "resources/images/*",
      "resources/userData/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon/favicon.ico"
    },
    "extraResources": [
      {
        "from": "resources/images",
        "to": "images"
      },
      {
        "from": "resources/userData",
        "to": "userData"
      },
      {
        "from": "resources/icon",
        "to": "icon"
      }
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "dotenv": "^16.4.5"
  }
}
